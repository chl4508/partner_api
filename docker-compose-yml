version: "3.8"

services:
    mongodb:
        image: mongo
        container_name: mongodb
        hostname: mongodb
        volumes:
            - ./docker-data/mongodb/data/db:/data/db
        ports:
            - "27017:27017"

    redis:
        image: redis
        container_name: redis
        hostname: redis
        ports:
            - "6379:6379"
        volumes:
            - ./docker-data/redis/data:/data